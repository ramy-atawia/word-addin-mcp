# =============================================================================
# Word Add-in MCP Project Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5-nano
AZURE_OPENAI_MODEL_NAME=gpt-5-nano

# =============================================================================
# Google Search API Configuration
# =============================================================================
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here

# =============================================================================
# PatentsView API Configuration
# =============================================================================
PATENTSVIEW_API_KEY=your_patentsview_api_key_here

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_URL=http://localhost:8001
MCP_SERVER_TOKEN=your_mcp_server_token_here
MCP_SERVER_TIMEOUT=30
MCP_SERVER_MAX_RETRIES=3

# =============================================================================
# Internal MCP Server Configuration
# =============================================================================
INTERNAL_MCP_HOST=localhost
INTERNAL_MCP_PORT=8001
INTERNAL_MCP_PATH=/mcp
INTERNAL_MCP_URL=http://localhost:8001/mcp
EXPOSE_MCP_PUBLICLY=false
MCP_PUBLIC_URL=https://mcp-tools.yourdomain.com/mcp

# =============================================================================
# FastAPI Configuration
# =============================================================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
FASTAPI_LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_here_32_characters_minimum
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS Configuration
# =============================================================================
ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["txt", "json", "csv", "xml", "md", "pdf", "docx"]
UPLOAD_DIR=./uploads

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# Cache Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600  # 1 hour in seconds

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=true
ENVIRONMENT=development
ENABLE_SWAGGER=true
ENABLE_RELOAD=true

# =============================================================================
# Testing Configuration
# =============================================================================
TESTING=false

# =============================================================================
# Office.js Configuration
# =============================================================================
OFFICE_JS_VERSION=1.1.0
OFFICE_JS_CDN=https://appsforoffice.microsoft.com/lib/1.1/hosted/

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_URL=https://localhost:3000
FRONTEND_BASE_URL=https://localhost:3000
FRONTEND_BUILD_DIR=./dist
FRONTEND_PUBLIC_PATH=/

# =============================================================================
# Auth0 Configuration
# =============================================================================
AUTH0_DOMAIN=dev-bktskx5kbc655wcl.us.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
AUTH0_AUDIENCE=INws849yDXaC6MZVXnLhMJi6CZC4nx6U

# =============================================================================
# API Configuration
# =============================================================================
API_BASE_URL=http://localhost:9000
API_DOCS_URL=http://localhost:9000/docs

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_NETWORK=wordaddin-network
DOCKER_VOLUME_PREFIX=wordaddin

# =============================================================================
# Web Content Fetcher Configuration
# =============================================================================
WEB_FETCHER_TIMEOUT=30
WEB_FETCHER_MAX_RETRIES=3
WEB_FETCHER_MAX_CONTENT_SIZE=10485760  # 10MB
WEB_FETCHER_USER_AGENT=Mozilla/5.0 (compatible; Word-Addin-MCP/2.0; https://example.com/bot)

# =============================================================================
# LLM Client Configuration
# =============================================================================
LLM_CLIENT_TIMEOUT=60
LLM_CLIENT_MAX_TOKENS=4000
LLM_CLIENT_TEMPERATURE=0.3
LLM_CLIENT_MODEL=gpt-5-nano

# =============================================================================
# Document Processing Configuration
# =============================================================================
DOCUMENT_MAX_PAGES=1000
DOCUMENT_CHUNK_SIZE=1000
DOCUMENT_OVERLAP_SIZE=200
DOCUMENT_PROCESSING_TIMEOUT=300

# =============================================================================
# Memory Service Configuration
# =============================================================================
MEMORY_MAX_ITEMS=10000
MEMORY_CLEANUP_INTERVAL=3600  # 1 hour
MEMORY_EXPIRY_DAYS=30

# =============================================================================
# Session Service Configuration
# =============================================================================
SESSION_TIMEOUT_MINUTES=60
SESSION_CLEANUP_INTERVAL=300  # 5 minutes
SESSION_MAX_ACTIVE_SESSIONS=1000

# =============================================================================
# API Rate Limiting (Per Service)
# =============================================================================
GOOGLE_API_RATE_LIMIT_PER_MINUTE=100
AZURE_OPENAI_RATE_LIMIT_PER_MINUTE=50
MCP_TOOL_RATE_LIMIT_PER_MINUTE=200

# =============================================================================
# Error Handling Configuration
# =============================================================================
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY=1000  # milliseconds
ERROR_LOG_LEVEL=ERROR
ERROR_NOTIFICATION_ENABLED=false

# =============================================================================
# Performance Configuration
# =============================================================================
ASYNC_WORKER_POOL_SIZE=10
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_SECONDS=30
RESPONSE_CACHE_ENABLED=true

# =============================================================================
# Security Headers
# =============================================================================
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block

# =============================================================================
# Backup and Recovery
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups

# =============================================================================
# External Service URLs
# =============================================================================
GOOGLE_SEARCH_API_URL=https://www.googleapis.com/customsearch/v1
ARXIV_API_URL=http://export.arxiv.org/api/query
IEEE_API_URL=https://ieeexplore.ieee.org/api/v1

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_GOOGLE_SEARCH_ENABLED=true
FEATURE_AZURE_OPENAI_ENABLED=true
FEATURE_DOCUMENT_ANALYSIS_ENABLED=true
FEATURE_WEB_CONTENT_FETCHING_ENABLED=true
FEATURE_MCP_TOOLS_ENABLED=true
FEATURE_AI_SUMMARIZATION_ENABLED=true

# =============================================================================
# Development Tools
# =============================================================================
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_API_DOCUMENTATION=true
ENABLE_TEST_ENDPOINTS=false
