# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_MODEL_NAME=gpt-4

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8001
MCP_SERVER_TOKEN=your_mcp_server_token_here
MCP_SERVER_TIMEOUT=30
MCP_SERVER_MAX_RETRIES=3

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/wordaddin
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
FASTAPI_LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=your_secret_key_here_32_characters_minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["txt", "json", "csv", "xml", "md"]
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600  # 1 hour in seconds

# Monitoring Configuration
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Development Configuration
DEBUG=true
ENVIRONMENT=development
ENABLE_SWAGGER=true
ENABLE_RELOAD=true

# Testing Configuration
TESTING=false
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/wordaddin_test

# Office.js Configuration
OFFICE_JS_VERSION=1.1.0
OFFICE_JS_CDN=https://appsforoffice.microsoft.com/lib/1.1/hosted/

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_BUILD_DIR=./dist
FRONTEND_PUBLIC_PATH=/

# Docker Configuration
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_NETWORK=wordaddin-network
DOCKER_VOLUME_PREFIX=wordaddin
